<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      lang="en">

    <h3 tal:condition="not: view/available">Chef API must be first initilialized.</h3>

    <tal:condition condition="view/available">
        <h3>Data Bags:</h3>
        <select size="0"
            tal:attributes="size view/get_num_databags">
            <option tal:repeat="databag view/get_databag_names" tal:content="databag">DataBag1</option>
        </select>
    </tal:condition>

</html>
